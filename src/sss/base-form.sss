.popup
	border-radius: 10px
	padding: 30px 40px 40px !important
	width: 430px
	max-width: 100%
	color: #212121

	&__title
		font-size: rem(20)
		line-height: calc(24 / 20)
		margin: 0 0 25px

.captcha
	display: flex
	align-items: flex-end

	&-input
		margin-right: 16px

	&-img

		img
			display: block

@media (max-width: 667px)

	.popup
		padding: 20px !important